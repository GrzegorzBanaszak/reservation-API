// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Patient {
  id          String @id @default(uuid())
  firstName   String
  lastName    String
  phoneNumber String
  pesel       String @unique
}

model Doctor {
  id             String    @id @default(uuid())
  firstName      String
  lastName       String
  specialization String
  phoneNumber    String
  hospital       Hospital? @relation(fields: [hospitalId], references: [id])
  hospitalId     String?
}

model Hospital {
  id          String   @id @default(uuid())
  name        String
  city        String
  street      String
  localNumber String
  doctors     Doctor[]
}
